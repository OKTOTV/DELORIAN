{# total items count #}
<div class="row episode-pager">
<table class="table table-striped">
<tr>
    <th>Posterframe</th>
{# sorting of properties based on query components #}
        <th>{{ knp_pagination_sortable(pagination, 'UniqID', 'e.uniqID') }}</th>
        <th>{{ knp_pagination_sortable(pagination, 'name', 'e.name') }}</th>
        <th>Beschreibung</th>
        <th>{{ knp_pagination_sortable(pagination, 'oktolab_media.show_episode_technical_state'|trans, 'e.technicalStatus' )}}</th>
    </tr>
</tr>
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
{# table body #}
{% for episode in pagination %}
<tr {% if loop.index is odd %}class="color"{% endif %}>
    <td>
        {% if episode.posterframe is not empty %}
            <a href="{{ path('oktolab_episode_show', {'uniqID': episode.uniqID}) }}"><img src="{{ episode.posterframe|thumb(80,120)}}" /></a>
        {% endif %}
    </td>
    <td><a href="{{ path('oktolab_episode_show', {'uniqID': episode.uniqID}) }}">{{ episode.uniqID }}</a></td>
    <td><a href="{{ path('oktolab_episode_show', {'uniqID': episode.uniqID}) }}">{{ episode.name }}</a></td>
    <td>{{ episode.description }}</td>
    <td>{{ 'oktolab_media.show_episode_technical_state_choice'|transchoice(episode.technicalStatus)}}</td>
</tr>
{% endfor %}
</table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>
</div>
