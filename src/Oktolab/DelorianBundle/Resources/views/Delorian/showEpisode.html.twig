{% extends "BprsStyleBundle::layout.html.twig" %}
{% block body_main %}
    <div class="page-header">
        <h1><a href="{{ path('show_series', {'series': episode.series.id })}}">{{ episode.series.name}}</a> / {{ episode.name }}</h1>
    </div>
    {% if episode.video is not empty %}
    <div id="video">
    </div>
    {% elseif episode.posterframe is not empty %}
    <img src="{{ episode.posterframe|path }}" class="img-responsive"/>
    {% endif %}
    <p>{{ episode.description|default('') }}</p>
    <p>Aktiv: {{ episode.isActive }}</p>
    <p>Angelegt am: {{ episode.createdAt|date("d.m.Y H:i") }}</p>
    <p>Aktualisiert am: {{ episode.updatedAt|date("d.m.Y H:i") }}</p>
    <p>Online von: {{ episode.onlineStart|date("d.m.Y H:i") }}</p>
    <p>
    {% if episode.onlineEnd is empty %}
        Online bis: nicht beschr√§nkt
    {% else %}
        Online bis: {{ episode.onlineEnd|date("d.m.Y H:i") }}</p>
    {% endif %}
    <p>UniqID: {{ episode.uniqID }}</p>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="http://content.jwplatform.com/libraries/qecJHTsP.js"></script>
    {% if episode.video is not empty %}
        <script type="text/javascript">
            var playerInstance = jwplayer("video");
            playerInstance.setup({
                file: "{{ episode.video|path }}",
                image: "{{ episode.posterframe|path }}"
            });
        </script>
    {% else %}
     {# TODO: load posterframe #}
    {% endif %}
{% endblock %}
