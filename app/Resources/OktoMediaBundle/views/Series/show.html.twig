{% extends "BprsStyleBundle::layout.html.twig" %}

{% block nav_head%}
    {% include 'BprsStyleBundle::menu.html.twig' with {'selected': 'delorian', 'dropdown': ''} %}
{% endblock %}

{% block body_main -%}
    <div class="page-header">
        <h1>{{ series.name }}</h1>
        <a class="btn btn-default" href="{{ path('oktolab_episode_new')}}">{{ 'oktolab_media.series_add_new_episode'|trans|raw }}</a>
        <!-- Single button -->
        <div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {{ 'delorian.edit_series_dropdown'|trans|raw }}
          </button>
          <ul class="dropdown-menu">
            <li><a href="{{ path('oktolab_series_edit', { 'series': series.id }) }}">{{ 'oktolab_media.series_edit_button'|trans|raw }}</a></li>
            <li><a href="{{ path('delorian_update_series_progress', { 'series': series.id }) }}">{{ 'delorian.series_update_progress_button'|trans|raw }}</a></li>
          </ul>
        </div>
        <a href="{{ path('oktolab_media_api_show_series', {'uniqID': series.uniqID }) }}" class="btn btn-default">{{ 'oktolab_media.series_show_api'|trans|raw }}</a>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="panel panel-default">
                <div class="panel-body">
                    {% if series.posterframe is not empty %}
                        <img src="{{ series.posterframe|path }}" class="img-responsive" />
                    {% endif %}
                </div>
                <div class="panel-footer">
                    {{ series.description }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <td>
                            {{ 'delorian.series_progress_label'|trans}}
                        </td>
                        <td>
                            {{ 'delorian.series_import_progress_choice'|transchoice(series.importProgress)}}
                        </td>
                    </tr>
                    <tr>
                        <td>{{'oktolab_media.series_info_isActive'|trans}}</td>
                        <td>{{ 'oktolab_media.series_info_isActive_choice'|transchoice(series.isActive) }}</td>
                    </tr>
                    <tr>
                        <td>{{'oktolab_media.series_info_uniqID'|trans}}</td>
                        <td>{{ series.uniqID }}</td>
                    </tr>
                    <tr>
                        <td>{{'oktolab_media.series_info_webtitle'|trans}}</td>
                        <td>{{ series.webtitle }}</td>
                    </tr>
                    <tr>
                        <td>{{'oktolab_media.series_info_createdAt'|trans}}</td>
                        <td>{{ series.createdAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <td>{{'oktolab_media.series_info_updatedAt'|trans}}</td>
                        <td>{{ series.updatedAt|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    <tr>
                        <td>{{'delorian.series_info_episodes'|trans}}</td>
                        <td>{{ series.episodes|length }}</td>
                    </tr>
                </tbody>
            </table>
            {% if series.posterframe is not empty %}
                <a href="{{ path('bprs_asset_download', {'key': series.posterframe.filekey}) }}" class="btn btn-default">{{ 'oktolab_media.series_download_posterframe_button'|trans|raw }}</a>
            {% endif %}
            <h2>Logbuch</h2>
            {% render(controller('BprsLogbookBundle:Default:pager', {'reference': series.uniqID}))%}
        </div>
    </div>
    {{ render(controller('OktolabMediaBundle:Series:paginationEpisodes', {'page': 1, 'series': series.id })) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>

        var updateView = function(e, link) {
            e.preventDefault();
            var link = $(link);
            $.ajax({
                url: link.attr('href'),
                context: document.body
            }).success(function(data) {
                $(link.parents('.episode-pager')).replaceWith(data);
            });
        }
        // AJAX pagination
        $( document ).on('click', '.pagination > li > a', function(e){
            updateView(e, this);
        });

        $( document ).on('click', '.sortable', function(e){
            updateView(e, this);
        });
        $( document ).on('click', '.asc', function(e){
            updateView(e, this);
        });
        $( document ).on('click', '.desc', function(e){
            updateView(e, this);
        });
    </script>
{% endblock %}
